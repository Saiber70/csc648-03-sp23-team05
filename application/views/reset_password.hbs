<div class="container" style="margin-top:2rem;">
  <div class="shadow p-3 mb-5 bg-white rounded">
    <div class="row justify-content-md-center">
      <h2>Reset Password</h2>
    </div>

    <form id="login-form" class="justify-content-md-center">
      <div class="form-group">
        <label for="...">Email*</label>
        <input type="email" name="email" class="form-control" placeholder="Enter email" required>
      </div>

      <div class="form-group">
        <label for="...">Password*</label>
        <input type="password" name="password" class="form-control" placeholder="Password" required>
      </div>

      <div class="form-group">
        <label for="...">Confirm Password*</label>
        <input type="password" name="password" class="form-control" placeholder="Password" required>
      </div>
    </form>
  </div>

  <div class="d-flex justify-content-center" style="margin-bottom:2rem">
    <div class="button_container">
      <button type="reset" class="btn btn-outline-dark">Cancel</button>
      <button type="submit" class="btn btn-outline-dark">Submit Request</button>
    </div>
  </div>

</div>
<!----end of form Reset Password --->
