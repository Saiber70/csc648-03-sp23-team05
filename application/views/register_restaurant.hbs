<div class="container" style="margin-top:2rem;">
    <div class="shadow p-3 mb-5 bg-white rounded">
        <div class="row justify-content-md-center">
            <h2>Restaurant Details</h2>
        </div>

        <form id="form" action="/posts/register_restaurant" method="POST"
            class="col justify-content-md-center needs-validation" novalidate>
            <div class="form-group">
                <label for="restaurant_name" class="form-label">Restaurant Name*</label>
                <input placeholder="Restaurant Name" class="form-control" type="text" name="restaurant_name" required
                    pattern="">
                <div class="invalid-feedback">
                    Please add a valid restaurant name.
                </div>
            </div>

            <div class="form-group">
                <label for="restaurant_address" class="form-label">Restaurant Address*</label>
                <input placeholder="Street Address" class="form-control" type="text" name="restaurant_address" required
                    pattern="">
                <div class="invalid-feedback">
                    Please add a valid street address.
                </div>
            </div>

            <div class="form-group">
                <label for="city" class="form-label">City*</label>
                <input placeholder="City" class="form-control" type="text" name="city" required pattern="">
                <div class="invalid-feedback">
                    Please add a valid city.
                </div>
            </div>

            <div class="form-group">
                <label for="state" class="form-label">State*</label>
                <input placeholder="State" class="form-control" type="text" name="state" required pattern="">
                <div class="invalid-feedback">
                    Please add a valid state.
                </div>
            </div>

            <div class="form-group">
                <label for="country" class="form-label">Country*</label>
                <input placeholder="Country" class="form-control" type="text" name="country" required pattern="">
                <div class="invalid-feedback">
                    Please add a valid country.
                </div>
            </div>

            <div class="form-group">
                <label for="zip_code" class="form-label">Zip Code*</label>
                <input placeholder="Zip Code" class="form-control" type="text" name="zip_code" required pattern="">
                <div class="invalid-feedback">
                    Please add a valid zip code.
                </div>
            </div>

            <p>Special offers (optional)</p>
            <div class="form-group">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="">
                    <label class="form-check-label">
                        Weekly Discounts and Promotions
                    </label>
                </div>
            </div>

            <div class="form-group">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="">
                    <label class="form-check-label">
                        Free Delivery </label>
                </div>
            </div>

            <div class="form-group">
                <p>Upload Thumbnail for Restaurant *</p>
                <div class="custom-file mb-4" style="margin-bottom:2rem">
                    <label for="file_upload" class="custom-file-label">Choose file...</label>
                    <input placeholder="Choose file..." class="custom-file-input" type="file" name="file_upload"
                        accept="image/*" required>
                    <div class="invalid-feedback">
                        Please provide an image of your restaurant.
                    </div>
                </div>
            </div>
    </div>

    <fieldset>
        <div class="shadow p-3 mb-5 bg-white rounded">
            <div class="row justify-content-md-center">
                <h1>Uploading Menu Items</h1>
            </div>

            <div class="form-group">
                <p>Upload image of the dish*</p>
                <div class="custom-file mb-4" style="margin-bottom:2rem">
                    <label for="item_upload" class="custom-file-label">Choose file...</label>
                    <input placeholder="Choose file..." class="custom-file-input" type="file" name="item_upload"
                        accept="image/*" required>
                    <div class="invalid-feedback">
                        Please provide an image of the menu item.
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label for="dish_name" class="form-label">Name of dish*</label>
                <input placeholder="Name of dish" class="form-control" type="text" name="dish_name" required pattern="">
                <div class="invalid-feedback">
                    Please add the name of your dish.
                </div>
            </div>

            <div class="form-group">
                <label for="dish_category">Category of dish:</label>
                <select id="dish_category" required name="dish_category">
                    <option value=""></option>
                    <option value="American">American</option>
                    <option value="Mexican">Mexican</option>
                    <option value="Asian">Asian</option>
                    <option value="Italian">Italian</option>
                </select>
            </div>

            <div class="form-group">
                <label for="dish_price" class="form-label">Price of dish*</label>
                <input placeholder="Price of dish" class="form-control" type="text" name="dish_price" required
                    pattern="">
                <div class="invalid-feedback">
                    Please add the price of your dish.
                </div>
            </div>

            <div class="form-group">
                <label for="dish_description" class="form-label">Describe your dish*</label><br>
                <textarea placeholder="Description of dish..." required name="dish_description" rows="4"
                    cols="50"></textarea>
            </div>

            <div class="d-flex justify-content-center" style="margin-bottom:2rem">
                <div class="button_container">
                    <button type="reset" class="btn btn-outline-dark">Cancel</button>
                    <button type="submit" class="btn btn-outline-dark">Add Next Item</button>
                </div>
            </div>
        </div>
    </fieldset>


    <div class="d-flex justify-content-center" style="margin-bottom:2rem">
        <div class="button_container">
            <button type="reset" class="btn btn-outline-dark">Cancel</button>
            <button type="submit" class="btn btn-outline-dark">Submit Request</button>
        </div>
    </div>
    </form>
</div>