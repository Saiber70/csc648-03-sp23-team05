<div class="container" style="margin-top:2rem;">
    <!--<div class="justify-content-center">-->
    <div class="shadow p-3 mb-5 bg-white rounded">
        <div class="row justify-content-md-center">
            <h2>Restaurant Details</h2>
        </div>
        <form class="col justify-content-md-center" style="margin-bottom:1rem; margin-top:1rem">

            <div id="Restaurant_Name" style="margin-bottom:2rem">
                <p>Restaurant Name*</p>
                <input placeholder="Restaurant Name" class="form-control" type="text" name="restaurant_name">
            </div>
            <!---Restaurant Address--->
            <div id="restaurant_address" style="margin-bottom:1rem">
                <p>Restaurant Address*</p>
                <input placeholder="Street Address" class="form-control" type="text" name="restaurant_address">
            </div>

            <div id="city" style="margin-bottom:1rem">
                <p>City*</p>
                <input placeholder="City" class="form-control" type="text" name="city">
            </div>
            <div id="state" style="margin-bottom:1rem">
                <p>State*</p>
                <input placeholder="state" class="form-control mr-sm-2" type="text" name="state">
            </div>
            <div id="country" style="margin-bottom:1rem">
                <p>Country*</p>
                <input placeholder="country" class="form-control mr-sm-2" type="text" name="country">
            </div>
            <div id="zip_code" style="margin-bottom:1rem">
                <p>Zip Code*</p>
                <input placeholder="zip code" class="form-control mr-sm-2" type="text" name="zipCode">
            </div>

            <p>Special offers (optional)</p>
            <div class="custom-control custom-checkbox mb-4">
                <input type="checkbox" class="custom-control-input" name="zipCode" >
                <label class="custom-control-label">Weekly Discounts and Promotion</label>
            </div>
            <div class="custom-control custom-checkbox mb-4">
                <input type="checkbox" class="custom-control-input" name="">
                <label class="custom-control-label">Free Delivery</label>
            </div>
            <p>Upload Thumbnail for Restaurant *</p>
            <div class="custom-file mb-4" style="margin-bottom:2rem">
                <input type="file" class="custom-file-input" required>
                <label class="custom-file-label">Choose file...</label>
            </div>
        </form>
    </div>

    <div class="shadow p-3 mb-5 bg-white rounded">

        <div class="row justify-content-md-center">
            <h1>Uploading Menu Items</h1>
        </div>

        <form style="margin:1rem">

            <div class="row justify-content-md-center" style="margin-bottom:1rem; margin-top:1rem">

                <div class="col-md-5 align-self-center ">
                    <p>Upload image of the dish</p>
                    <div class="custom-file mb-4" style="margin-bottom:2rem">
                        <input type="file" class="custom-file-input" required>
                        <label class="custom-file-label">Choose file...</label>
                    </div>
                </div>
                <div class="w-100"></div>
                <div class="col-md-5 " style="margin-bottom:1rem">
                    <p>Name of dish</p>
                    <input type="text" placeholder="Name of dish">
                </div>
                <div class="w-100"></div>
                <div class="col-md-5" style="margin-bottom:1rem">
                    <label for="dish-category">Category of dish:</label>
                    <select id="dish-category" name="dish-category">
                        <option value="American">American</option>
                        <option value="Mexican">Mexican</option>
                        <option value="Asian">Asian</option>
                        <option value="Italian">Italian</option>
                    </select>
                </div>
                <!--
                        <p>Category of dish</p>
                        <input type="text" placeholder="category of dish" >-->
                <div class="w-100"></div>
                <div class="col-md-5" style="margin-bottom:1rem">
                    <p>Price of dish</p>
                    <input type="text" placeholder="price of dish">
                </div>

                <div class="w-100"></div>
                <div class="col-md-5 " style="margin-bottom:1rem">
                    <p>Describe your dish</p>
                    <textarea class="col-lg-8 align-self-center"></textarea>
                </div>
                <div class="w-100"></div>
                <div class="col-md-5 ">
                    <button type="button" class="btn btn-outline-dark" href="....">Add Next Item</button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="d-flex justify-content-center" style="margin-bottom:2rem">
    <div class="button_container">
        <button type="button" class="btn btn-outline-dark" href="....">Cancel</button>
        <button type="button" class="btn btn-outline-dark" href="....">Submit Request</button>
    </div>
</div>
</div>