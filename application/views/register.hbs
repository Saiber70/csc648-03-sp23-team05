<div class="container" style="margin-top:2rem;">
    <div class="shadow p-3 mb-5 bg-white rounded">
        <div class="row justify-content-md-center">
            <h2>Register</h2>
        </div>
        <form class="col justify-content-md-center" style="margin-bottom:1rem; margin-top:1rem">
            
            <div id="fist_name" style="margin-bottom:10px">
                <p>First Name*</p>
                <input placeholder="First Name" class="form-control mr-sm-2" type="text" name="firstname">
            </div>
            <div id="last_name" style="margin-bottom:10px">
                <p>Last Name*</p>
                <input placeholder="Last Name" class="form-control mr-sm-2" type="text" name="lastname">
            </div>            
            <div id="phone_number" style="margin-bottom:10px">
                <p>Phone Number*</p>
                <input  placeholder="Phone Number" class="form-control" type="text" name="phone">
            </div>
            <div id="sfsu_email" style="margin-bottom:10px">
                <p>SFSU Email*</p>
                <input type="email" placeholder="SFSU Email" class="form-control" type="text" name="email">
            </div>
            <div id="password" style="margin-bottom:10px">
                <p>Password*</p>
                <input type="password" placeholder="Password" class="form-control" type="text" name="password">
            </div>
            <div id="re_password" style="margin-bottom:10px">
                <p>Renter Password*</p>
                <input type="password" placeholder="Renter-Password" class="form-control" type="text" name="re_password">
            </div>
            <div class="custom-control custom-checkbox mb-4">
                <input type="checkbox" class="custom-control-input">
                <label class="custom-control-label">
                    <a href="https://www.youtube.com/watch?v=HMGetv40FkI">Terms and Conditions</a>
                </label>
            </div>
        </form>
    </div>
    <div class="d-flex justify-content-center" style="margin-bottom:2rem">
        <div class="button_container">
            <button type="button" class="btn btn-outline-dark" href="....">Cancel</button>
            <!--<button type="button" class="btn btn-outline-dark" href="....">Register Restaurant</button>-->
            <button type="button" class="btn btn-outline-dark" href="....">Sign Up</button>
        </div>
    </div>
    <!-- </div>-->
</div>
